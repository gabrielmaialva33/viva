# VIVA - EditorConfig
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Gleam source files
[*.gleam]
indent_size = 2

# Erlang files
[*.{erl,hrl}]
indent_size = 4

# C/C++ source (NIFs)
[*.{c,h,cpp,hpp}]
indent_size = 2

# Rust (Future Body)
[*.rs]
indent_size = 4

# Python services
[*.py]
indent_size = 4

# Makefiles require tabs
[Makefile]
indent_style = tab
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2

# TOML (gleam.toml, Cargo.toml)
[*.toml]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Arduino
[*.{ino,cpp,h}]
indent_size = 2
