# =============================================================================
# VIVA - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# NVIDIA NIM (Required)
# Get your API key at: https://build.nvidia.com/
# -----------------------------------------------------------------------------
NVIDIA_API_KEY=nvapi-your-api-key-here
NIM_BASE_URL=https://integrate.api.nvidia.com/v1
NIM_LLM_MODEL=nvidia/llama-3.3-nemotron-super-49b-v1
NIM_EMBEDDING_MODEL=nvidia/nv-embedqa-e5-v5
NIM_TIMEOUT=60000

# -----------------------------------------------------------------------------
# Database (TimescaleDB)
# Default values work with docker-compose
# -----------------------------------------------------------------------------
DATABASE_URL=ecto://postgres:postgres@localhost:5432/viva_dev
# DATABASE_URL=ecto://user:password@host:5432/viva_prod
POOL_SIZE=10

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# Qdrant (Vector Database)
# -----------------------------------------------------------------------------
QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=your-qdrant-api-key

# -----------------------------------------------------------------------------
# Phoenix Server
# -----------------------------------------------------------------------------
PORT=4000
PHX_HOST=localhost
# SECRET_KEY_BASE=generate-with-mix-phx.gen.secret

# -----------------------------------------------------------------------------
# Oban (Background Jobs)
# -----------------------------------------------------------------------------
OBAN_AVATAR_QUEUE_SIZE=20

# -----------------------------------------------------------------------------
# Feature Flags (Optional)
# -----------------------------------------------------------------------------
# ENABLE_AUTONOMOUS_CONVERSATIONS=true
# ENABLE_MEMORY_DECAY=true
# WORLD_TIME_SCALE=10
